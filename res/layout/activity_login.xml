<?xml version="1.0" encoding="utf-8"?>
<!-- Login Screen Piece -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill"
    android:orientation="vertical" 
    android:id="@+id/login"
    android:background="@drawable/background_holo_light"
    >
   
	<RelativeLayout android:id="@+id/LoginContainer"
	    style="@style/fill_width_partial"
	    android:layout_centerHorizontal="true"
	    >	 
	       <TextView 
	           android:id="@+id/Welcome"
	           android:layout_alignParentTop="true"
	           android:layout_centerHorizontal="true"
	           android:text="Bronx Zoo Navigator"
	           android:background="@drawable/edit_text_holo_light"
	           android:textColor="@color/forestgreen"
	           android:textSize="25dip"
	           style="@style/wrap"
	           />
	       <EditText 
	           android:layout_below="@id/Welcome"
	           android:id="@+id/Email"
	           android:hint="Email"
	           style="@style/fill_width_partial"
	           android:textColor="@color/forestgreen"
	           android:background="@drawable/edit_text_holo_light"
	           android:inputType="textEmailAddress"
	           android:layout_marginBottom="5dip"
	           android:layout_marginTop="30dip"
	           
	           />
	       <EditText 
	           android:layout_marginTop="20dip"
	           android:layout_below="@id/Email"
	           android:id="@+id/Password"
	           android:textColor="@color/forestgreen"
	           android:background="@drawable/edit_text_holo_light"
	           android:hint="Password"
	           style="@style/fill_width_partial"
	           android:inputType="textPassword"
	           />
	</RelativeLayout>

	<CheckBox 
	    android:id="@+id/RememberMe"
	    style="@style/fill_width_partial"
	    android:layout_marginTop="10dip"
	  	android:layout_below="@id/LoginContainer"
	  	android:text="Remember Me"
	  	android:textColor="@color/forestgreen"
	  	android:button="@drawable/btn_checkbox_holo_light"
	    />
	<Button
	    android:id="@+id/LoginButton"
	    style="@style/fill_width_partial"
	    android:layout_below="@id/RememberMe"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/btn_default_holo_light"
	    android:text="Login"
	    android:textColor="@color/forestgreen"
	    android:textSize="25dip" />
	 
</RelativeLayout>