<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="fill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="fill_width">
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="fill_width_partial" parent="fill_width">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
    </style>
    
    <style name="wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="imagebutton" parent="wrap">
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="margin_leftright" parent="imagebutton">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
    
</resources>